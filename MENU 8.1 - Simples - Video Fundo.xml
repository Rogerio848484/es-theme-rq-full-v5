<fontSize>0.034</fontSize>
<pos>0 0.965</pos>    
<glowColor>000000</glowColor>
<backgroundColor>000000</backgroundColor>
<color>ffffff</color>	  
<textColor>ffffff</textColor>
<iconColor>ffffff</iconColor>
</helpsystem>
	  
