<theme>
   <formatVersion>7</formatVersion>

<view name="system">

<text name="systemInfo">
<glowColor>000000</glowColor>
<pos>0 0.6</pos>
<backgroundColor>00000000</backgroundColor>
<color>ffffff</color>
<rotation>0</rotation> 
<fontPath>./_inc/fonts/gomarice_no_continue.ttf</fontPath>
<fontSize>0.040</fontSize>
<zIndex>999</zIndex>	 
<storyboard>
<animation property="opacity" from="0" to="1" begin="100" duration="100" mode="EaseOut"/>
<animation property="y" from="0.14" begin="100" duration="400" mode="linear"/>
</storyboard>  
</text> 

