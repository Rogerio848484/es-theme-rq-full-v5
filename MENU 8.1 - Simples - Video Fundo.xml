<pos>0 0.399999</pos>
<size>1 0.2</size>
<zIndex>5000</zIndex>   
<logoSize>0.30 0.12</logoSize>
<logoAlignment>center</logoAlignment>
<maxLogoCount>3</maxLogoCount>
<zIndex>21</zIndex>
<color>00000000</color>
</carousel>

