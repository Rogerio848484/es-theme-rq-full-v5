</image>

<video name="md_video">
<pos>0.5 0.5</pos>
<size>1 1</size>
<zIndex>2</zIndex>  
<delay>2</delay>		
</video>
	
<image name="md_thumbnail">
<pos>0.17 0.35</pos>
<visible>true</visible>
<maxSize>0.45 0.45</maxSize>
<origin>0.5 0.5</origin>
<zIndex>5</zIndex>  
<storyboard event="activateNext">
<animation property="opacity" from="0" to="0" begin="0" duration="500" mode="linear"/>
<animation property="opacity" from="0" to="1" begin="1000" duration="500" mode="linear"/>
<animation property="scale" from="0" to="1" begin="1000" duration="1000" mode="linear"/>
<animation property="rotation" from="-360" begin="1000" duration="1000" mode="linear"/>
</storyboard>
<storyboard event="activatePrev">
<animation property="opacity" from="0" to="0" begin="0" duration="500" mode="linear"/>
<animation property="opacity" from="0" to="1" begin="1000" duration="500" mode="linear"/>
<animation property="scale" from="0" to="1" begin="1000" duration="1000" mode="linear"/>
<animation property="rotation" from="-360" begin="1000" duration="1000" mode="linear"/>
</storyboard>
<storyboard event="open">
<animation property="opacity" from="0" to="0" begin="0" duration="500" mode="linear"/>
<animation property="opacity" from="0" to="1" begin="1000" duration="500" mode="linear"/>
<animation property="scale" from="0" to="1" begin="1000" duration="1000" mode="linear"/>
<animation property="rotation" from="-360" begin="1000" duration="1000" mode="linear"/>
</storyboard>
